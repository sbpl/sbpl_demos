source screenrc.common

screen -t rHub
stuff "roslaunch sbpl_multimaster sbpl_hub.launch ^M"

screen -t rocon
stuff "sleep 5^M"
stuff "roslaunch sbpl_multimaster dagobah_gateway.launch ^M"

screen -t rcon_acts
stuff "#Run this only if you want to expose the roman actions over rocon ^M"
stuff "rosrun sbpl_demos roman_rocon_actions_node.py"

screen -t bash

screen -t rom_view
stuff "cd ~/rs_limb_dist/sbin ^M"
stuff "source run_env.sh ^M"
stuff "./start_roman_viewer.sh"

screen -t ctrl
stuff "roslaunch rcta roman_control.launch live:=true fake:=false --screen"

screen -t move
stuff "roslaunch rcta move_arm_node.launch live:=true fake:=false --screen"

screen -t map
stuff "roslaunch sbpl_demos roman_map_setup.launch"

screen -t am4
stuff "# roslaunch openni2_launch asus.launch^M"
stuff "ssh rcta@am4_sbpl^M"

screen -t AR
stuff "roslaunch sbpl_demos roman_asus_indiv.launch"

screen -t asus_tilt
stuff "# tilt values: ^M"
stuff "# 0.68-> looking down 90deg ^M"
stuff "# 2.25 -> looking straight 0deg ^M"
stuff "^M"
stuff "rostopic pub -1 pan_tilt_0/command std_msgs/Float64 -- 1.2"

screen -t pose_node
stuff "rosrun sbpl_demos pose_upsample_node"

screen -t demo
stuff "rosrun sbpl_demos roman_grasp_demo.py"
